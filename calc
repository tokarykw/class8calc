echo "Good day. I hope you are well!"
echo "Do you want to Add? Then enter the letter A"
echo "or do you want to Subtract? Enter S"
echo "if neither, then enter E to Exit."
echo "Please provide an answer to continue:"

read response
case $response in
"A")
echo "Ok, we will Add. Please enter the first number."
read add1
echo "Please enter another number to add:"
read add2
echo "add1 + add2 = "
let "total=add1 + add2"
echo $total
;;
"S")
echo "Subtraction (not my favorite) but Ok. Please enter the first number for your subtraction equation:"
read num1
echo "Please enter the number to subtract:"
read num2
echo "$num1 - $num2 = "
let "total=num1 - num2"
echo $total 
;;
"E")
echo "Sorry to see you go, Goodbye."
;;
esac
 

