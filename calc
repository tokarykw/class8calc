echo "Good day. I hope you are well!"
echo "Do you want to Add? Then enter the letter A"
echo "or do you want to Subtract? Enter S"
echo "if neither, then enter E to Exit."
echo "Please provide an answer to continue:"

read response
case $response in
"A")
echo "Ok, we will Add!"
;;
"S")
echo "Subtraction (not my favorite) but Ok"
;;
"E")
echo "Sorry to see you go, Goodbye."
;;
esac

